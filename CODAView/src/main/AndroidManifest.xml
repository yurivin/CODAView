            android:name="net.yvin.codaview.app.activity.SplashScreenActivity"
            android:label="@string/CODA" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
