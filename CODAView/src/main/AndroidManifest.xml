<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.yvin.codaview.app"
    android:versionCode="11"
    android:versionName="1.1.0" >
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/coda"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.yvin.codaview.app.activity.DailyActivity"
            android:label="@string/daily"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.CalendarActivity"
            android:label="@string/calendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.TextActivity"
            android:label="@string/CODA"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.MenuActivity"
            android:label="@string/menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.WayBiginingActivity"
            android:label="@string/way_bigining"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.TwelveActivity"
            android:label="@string/CODA"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.StepActivity"
            android:label="@string/CODA"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.SettingsActivity"
            android:label="@string/CODA"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.yvin.codaview.app.activity.SplashScreenActivity"
            android:label="@string/CODA" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
