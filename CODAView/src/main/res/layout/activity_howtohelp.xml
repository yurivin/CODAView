<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/background"
              android:layout_height="match_parent">

    <TextView
            android:layout_above="@+id/btnHelpByTranslate"
            android:layout_marginTop="11dp"
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffaa0f"
            android:text="@string/helpByTranslate"
            android:textSize="14dp"/>

    <Button android:id="@+id/btnHelpByTranslate"
            android:layout_alignParentBottom="true"
            style="@style/Widget.Button.MainMenu"
            android:onClick="clickBtnHelpByTranslation"
            android:text="@string/sendEmail"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>