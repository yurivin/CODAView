<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="net.yvin.codaview.app.activity.DailyActivity">
    <ImageView android:id="@+id/roseView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/Roza_emociy"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/centrButton"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"/>
    <Button android:id="@+id/goreButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/centrButton"
            android:layout_marginTop="35dp"/>
    <Button android:id="@+id/vostorgButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_above="@+id/centrButton"
            android:layout_marginBottom="35dp"/>
</RelativeLayout>
